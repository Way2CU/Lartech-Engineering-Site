<document>
	<header>
		<a
			class="$section == 'home' ? 'active' : false"
			href="url_Make('', 'home')"
			cms:eval="href"
			cms:optional="class"
			>
			<img 
				src="_BASEURL.'/site/images/logo-reconstructed.svg'" 
			 	alt="lartech_logo"
				cms:eval="src,alt"
			 	/>
		</a>
		<nav>
			<a
				class="$section == 'about' ? 'active' : false"
				href="url_Make('', 'about')"
				cms:eval="href"
				cms:optional="class"
				>
				<cms:text constant="menu_about"/>
			</a>

			<a
				class="$section == 'clients' ? 'active' : false"
				href="url_Make('', 'clients')"
				cms:eval="href"
				cms:optional="class"
				>
				<cms:text constant="menu_clients"/>
			</a>

			<a
				class="$section == 'solutions' ? 'active' : false"
				href="url_Make('', 'solutions')"
				cms:eval="href"
				cms:optional="class"
				>
				<cms:text constant="menu_solutions"/>
			</a>

			<a
				class="$section == 'building' ? 'active' : false"
				href="url_Make('', 'building')"
				cms:eval="href"
				cms:optional="class"
				>
				<cms:text constant="menu_building"/>
			</a>

			<a
				class="$section == 'contact' ? 'active' : false"
				href="url_Make('', 'contact')"
				cms:eval="href"
				cms:optional="class"
				>
				<cms:text constant="menu_contact"/>
			</a>
		</nav>

		<a
			href="'tel:'.urlencode(Language::getText('phone'))"
			cms:eval="href"
			class="phone"
			>
			<cms:text constant="phone"/>
		</a>
	</header>
</document>